common_patterns_server <- function(input, output, session) {
  
  return(
    list(
      pattern_search_type = reactive({ input$pattern_search_type }),
      ignore_octaves = reactive({ input$ignore_octaves }),
      n_gram_size = reactive({ input$n_gram_size }),
      number_of_appearances = reactive({ input$number_of_appearances })
    ))
}
